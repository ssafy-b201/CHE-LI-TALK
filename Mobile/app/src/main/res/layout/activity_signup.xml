<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".activity.login.SignupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/chelitalk_splash_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/galmuri9"
        android:gravity="center"
        android:text="체리톡에서 사용 할 영어이름을 입력해주세요."
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/galmuri9"
        android:gravity="center"
        android:text="영어, 10자 이하"
        android:textColor="@color/cherry"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:paddingHorizontal="10sp"
        android:background="@drawable/rectangle_style" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_start_btn"
        android:fontFamily="@font/galmuri9"
        android:text="시작하기"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="bottom|center"
        android:text="Source By Devway"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>