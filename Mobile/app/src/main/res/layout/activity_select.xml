<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#C5E6F0"
    tools:context=".english.SelectActivity">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bubble"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/spinner_info"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/galmuri9"
            android:textSize="20sp"
            android:text="오늘의 대화 주제"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_keywords"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="110dp"
            android:textAlignment="center"
            android:entries="@array/select_keywords"
            android:background="@drawable/rectangle_select_keywords"
            android:popupBackground="@drawable/rectangle_list_keywords">
        </Spinner>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/btn_speak"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center|start"
            android:src="@drawable/lips"
            android:background="@drawable/shape_for_circle_chat"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginStart="106dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center|start"
            android:fontFamily="@font/galmuri9"
            android:textSize="17sp"
            android:textColor="@color/cherry"
            android:text="Speaking"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/btn_chatting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="100dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center|end"
            android:src="@drawable/keyboard"
            android:background="@drawable/shape_for_circle_chat"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="96dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center|end"
            android:fontFamily="@font/galmuri9"
            android:textSize="17sp"
            android:textColor="@color/cherry"
            android:text="Chatting"
            android:textStyle="bold"
            />

    </FrameLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:padding="5dp"
        android:src="@drawable/cherries"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:layout_margin="50dp"
        android:background="@drawable/shape_for_circle_button"/>

</LinearLayout>