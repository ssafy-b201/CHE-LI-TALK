<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/background_color"
    tools:context=".activity.english.SelectActivity">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/goToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bubble"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/spinner_info"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/galmuri9"
            android:textSize="20sp"
            android:text="오늘의 대화 주제"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spinner_keywords"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="110dp"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="48dp"
            android:entries="@array/select_keywords"
            android:background="@drawable/rectangle_select_keywords"
            android:popupBackground="@drawable/rectangle_list_keywords">
        </Spinner>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_gravity="center">

        <!-- 첫 번째 버튼과 텍스트를 포함하는 FrameLayout -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="80dp"
            android:background="@drawable/shape_for_circle_chat">

            <ImageButton
                android:id="@+id/btn_speak"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/mic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:fontFamily="@font/galmuri9"
                android:text="Speaking"
                android:textColor="@color/cherry"
                android:textSize="17sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 두 번째 버튼과 텍스트를 포함하는 FrameLayout -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="80dp"
            android:background="@drawable/shape_for_circle_chat">

            <ImageButton
                android:id="@+id/btn_chatting"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="0dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/keyboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:fontFamily="@font/galmuri9"
                android:text="Chatting"
                android:textColor="@color/cherry"
                android:textSize="17sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>


</LinearLayout>