<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".activity.english.SelectActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/conversation_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/galmuri9"
            android:gravity="center_horizontal"
            android:text="대화 유형"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_gravity="center|start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape_for_circle_chat">

            <ImageButton
                android:id="@+id/btn_speak"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:fontFamily="@font/galmuri9"
                android:text="Speaking"
                android:textColor="@color/cherry"
                android:textSize="17sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_gravity="center|end"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/shape_for_circle_chat">

            <ImageButton
                android:id="@+id/btn_chatting"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/keyboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:fontFamily="@font/galmuri9"
                android:text="Chatting"
                android:textColor="@color/cherry"
                android:textSize="17sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/spinner_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/galmuri9"
            android:gravity="center"
            android:text="오늘의 대화 주제"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <ImageView
                android:id="@+id/image_family"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/family" />

            <ImageView
                android:id="@+id/image_pet"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/pet" />

            <ImageView
                android:id="@+id/image_movie"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/movie" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <ImageView
                android:id="@+id/image_hobby"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/hobby" />

            <ImageView
                android:id="@+id/image_food"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/food" />

            <ImageView
                android:id="@+id/image_music"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/music" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <ImageView
                android:id="@+id/image_workout"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/workout" />

            <ImageView
                android:id="@+id/image_reading"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/reading" />

            <ImageView
                android:id="@+id/image_travel"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/travel" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnStart"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_for_finish_btn"
            android:fontFamily="@font/galmuri9"
            android:text="대화 시작하기"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/intent_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/galmuri9"
            android:gravity="center_vertical"
            android:text="오늘의 대화 주제"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>