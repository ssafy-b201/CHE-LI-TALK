<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5E6F0"
    android:orientation="vertical"
    tools:context=".login.SignupActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:src="@drawable/cheritalk_splash_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체리톡에서 사용 할 영어이름을 입력해주세요."
        android:layout_gravity="center"
        android:layout_marginBottom="15dp" />


    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_style"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="576dp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_start_btn"
        android:text="시작하기"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="645dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="50dp"
        android:text="Source By Devway"
        android:textColor="#000000"
        android:textSize="12sp" />

</LinearLayout>